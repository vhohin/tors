{% extends "master.html.twig" %}

{% block title %}TORS{% endblock %}
{% block head %}
<script>
$(document).ready(function () {
//Check if the current URL contains '#'
    if(document.URL.indexOf("#")==-1){
        // Set the URL to whatever it was plus "#".
        url = document.URL+"#";
        location = "#";

        //Reload the page
        location.reload(true);
    }
});      
</script> 
{% endblock %}       
{% block content %}
{% if currentUser %}    
    <div id="bookingForm">
        <h2>Order information</h2>

        <p>Passenger: <span style="font-weight: bold;">{{currentUser.userName}}</span></p>
        <p>Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span style="font-weight: bold;"> {{currentUser.email}}</span></p>
        <p>-------------------------------------------------------------------------</p>
        <p>Trip from:  <span style="font-weight: bold;">{{booking.3.name}} ({{booking.3.Country}})</span></p>
        <p>--------to:  <span style="font-weight: bold;">{{booking.4.name}} ({{booking.4.Country}})</span></p>
        <p>-------------------------------------------------------------------------</p>
        <p>Depart:&nbsp;&nbsp;  <span style="font-weight: bold;">{{booking.1.DateTimeDepart}}</span></p>
        <p>Arrive:&nbsp;&nbsp;  <span style="font-weight: bold;">{{booking.1.DateTimeArrive}}</span></p>
        <p>-------------------------------------------------------------------------</p>
        <p>Seats:&nbsp;&nbsp;&nbsp;  <span style="font-weight: bold;">{{booking.seats}}</span></p>
        <p>-------------------------------------------------------------------------</p>
        <p>Bus:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <span style="font-weight: bold;">{{booking.2.MakeModel}}</span></p>
        <p>-------------------------------------------------------------------------</p>
        <p>Amenities:</p>
        {% if booking.1.WiFi==1 %}  
            <p>----------------------WiFi:  <span style="font-weight: bold;">YES</span></p>
        {% else %}
            <p>----------------------WiFi:  <span style="font-weight: bold;">NO</span></p>
        {% endif %} 
        {% if booking.1.AirConditioning==1 %}  
            <p>-------AirConditioning:  <span style="font-weight: bold;">YES</span></p>
        {% else %}
            <p>-------AirConditioning:  <span style="font-weight: bold;">NO</span></p>
        {% endif %} 
        {% if booking.1.Toilet==1 %}  
            <p>--------------------Toilet:  <span style="font-weight: bold;">YES</span></p>
        {% else %}
            <p>--------------------Toilet:  <span style="font-weight: bold;">NO</span></p>
        {% endif %} 
        {% if booking.1.PowerOutlets==1 %}  
            <p>----------PowerOutlets:  <span style="font-weight: bold;">YES</span></p>
        {% else %}
            <p>----------PowerOutlets:  <span style="font-weight: bold;">NO</span></p>
        {% endif %} 
        <p>-------------------------------------------------------------------------</p><br/>
        <p>Price one ticket:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   <span style="font-weight: bold;">$ {{booking.1.Price}}</span></p>
        <p>-------------------------------------------------------------------------</p><br/>
        <p>Summary price:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   <span style="font-weight: bold;">$ {{paymentSum}}</span></p>
        <p>-------------------------------------------------------------------------</p><br/>
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="7J5JGAYF86MVJ">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynow_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
        </form>
        <p style="display:inline-block;"> or <a href="/"> CANCEL </a> or </p>
        <!-- Saved information to DB - test  -->
        <form action="/payment" method="post" style="display:inline-block;">
            <input type="hidden" name="PassengerID" value="{{booking.user}}">
            <input type="hidden" name="TripID" value="{{booking.1.ID}}">
            <input type="hidden" name="PaymentInfo" value="VISA">
            <input type="hidden" name="PaymentDate" value={{booking.1.DateTimeDepart}}>
            <input type="hidden" name="BookesSeats" value="{{booking.seats}}">
            <input type="submit" value="SAVE">
        </form>
    </div>
{% else %}
    <p class="pLongRight"><a href="index.php/login">LOGIN </a> | <a href="index.php/register"> REGISTER</a></p>
{% endif %}    
{% endblock %}

