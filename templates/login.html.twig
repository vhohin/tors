{% extends "master.html.twig" %}

{% block title %}Log In{% endblock %}

{% block content %}
    <div id="divLogin">
        <h2>Log In</h2>
        <p>Don't have an account? <a href='/register'>Sign up</a></p>

        <div id="divLoginFacebook">
            <button type="button" class="btnFb"><span style="font-family:sans-serif; font-weight: bold; font-size: 20px;">f&nbsp</span> Log in with Facebook</button>
        </div>
        
        <p>----------- or use your email---------------</p>

        {% if loginFailed %}
            <p>Invalid email or password</p>
        {% endif %}


        <form method="post" id="loginForm">
            <a href="{{loginUrl}}"> Facebook login </a>
            
            <label for="loginEmail">Email Address</label><br>
                <input type="text" name="email" placeholder="Email Address"><br><br>
           <label for="loginEmail" >Password</label><br>
               <input type="password" name="pass" placeholder="Password"><br><br>
               
            <input type="submit" value="Log In" class="btnLogIn" name="btnSubmit"><br><br>
        </form>
        
        <a href="/passwordForgot">Forgot your password?</a><br><br>
   </div>

{% endblock %} 
