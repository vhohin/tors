{% extends "master.html.twig" %}

{% block title %}Password Forgot{% endblock %}

{% block content %}
    <div id="divLogin">
        <h2>Log In</h2>
        <p>Please enter the email address associated with your account. We'll send you an email which will allow you to create a new password.</p>


        {% if errorList %}
            <ul>
                {% for error in errorList %}
                    <li>{{ error }}</li>
                    {% endfor %}
            </ul>
        {% endif %}

        <form method="post" id="resetForm">
            <label for="loginEmail">Email Address</label><br>
            <input type="text" name="email" style="font-size:1em;" placeholder="Email Address"><br>
            <span id="result" style="color:red" >Email does not exist.</span><br>
            <input type="submit" name="btnSubmit" value=" Recovery ">
        </form>



    </div>

{% endblock %} 
